<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0-windows</TargetFramework>

		<!-- NuGet -->
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageId>AK.Enova.API</PackageId>
		<Version>1.0.2</Version>
		<Authors>Artur Kunicki</Authors>
		<Company>AK</Company>
		<Description>REST API Framework for Soneta Enova365</Description>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>

		<!-- GitHub -->
		<RepositoryUrl>https://github.com/arturkunicki/AK.Enova.API</RepositoryUrl>
		<RepositoryType>git</RepositoryType>

		<!-- build -->
		<Nullable>disable</Nullable>
		<ImplicitUsings>false</ImplicitUsings>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Data.Sqlite" Version="10.0.2" />
		<PackageReference Include="Soneta.Start" Version="2512.1.1" />

		<PackageReference Include="Soneta.Products.Modules" Version="2512.1.1" PrivateAssets="all" ExcludeAssets="runtime" />

		<FrameworkReference Include="Microsoft.AspNetCore.App" />

		<PackageReference Include="Microsoft.IdentityModel.Tokens" Version="8.5.1" />
		<PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="8.5.1" />

	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Nowy folder\" />
	</ItemGroup>

</Project>
